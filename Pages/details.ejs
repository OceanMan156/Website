<html lang="en">
<%- include('./partials/head.ejs') %>
<body>
    <%- include('./partials/nav.ejs') %>
    <div class="details content">
        <h2>Order ID <%=Order._id%></h2>
        <div class="content">
            <p class ="Name">Name: <%= Order.Name%> </p>
            <p class ="Address">Address: <%= Order.Address%> </p>
            <p class ="Design">Design: <%= Order.Design%> </p>
            <p class ="Qty">Qty: <%= Order.Qty%> </p>
        </div>
        <a class="delete" id="delete" data-doc="<%= Order._id %>"> Delete</a>
    </div>
    <script>
        const trashcan = document.querySelector('a.delete');

        trashcan.addEventListener('click', (e) => {
            const endpoint = `/OrderPage/${trashcan.dataset.doc}`;
            fetch(endpoint, {
                method: "DELETE",
            })
            .then(response => response.json())
            .then((data) => window.location.href = data.redirect)
            .catch((err) => console.log(err));
        });
    </script>
</body>
</html>